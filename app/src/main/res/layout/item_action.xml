<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:animateLayoutChanges="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:paddingTop="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="8dp"
            app:srcCompat="@drawable/ic_bookmark_hollow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:tint="@color/character_fg_0"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/note"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_note"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:tint="@color/character_fg_0"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/prop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_props"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            tools:tint="@color/character_fg_0"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/secondary_text"
            android:paddingTop="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:fontFamily="@font/sans_serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/lorem"/>

    <View
            android:id="@+id/hiding"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tiling_stripes"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/direction"
            app:layout_constraintEnd_toEndOf="@+id/direction"
            app:layout_constraintStart_toStartOf="@+id/direction"
            app:layout_constraintTop_toTopOf="@+id/direction"
            tools:backgroundTint="@color/character_fg_0"/>


</androidx.constraintlayout.widget.ConstraintLayout>
